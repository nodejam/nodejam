<div class="page-wrap">
    <div class="content-area">    
        <div class="item text">
            {{#each fields}}

            {{#equals type 'cover'}}
            <img class="cover" src="{{../../post/cover}}" alt="{{../post/coverTitle}}" />            
            {{/equals}}

            {{#equals type 'title'}}
            <h1>{{../../post.title}}</h1>

            <div class="small-page-element tiny-page-element">
                <div class="iconic-desc sub-heading">            
                    <img src="{{../../user.assetPath}}/{{../../user.username}}_t.jpg" alt="{{../../user.name}}" />
                    <span class="text">
                        <a href="/~{{../../user.username}}">{{../../user.name}}</a><br />
                        <span class="light-text">Yesterday in <a href="/{{../../forum.stub}}">{{../../forum.name}}</a></span>
                    </span>                
                </div>
            </div>
            {{/equals}}

            {{#equals type 'content'}}
            <div class="content">
                {{{value}}}
            </div>
            {{/equals}}

            {{/each}}
        </div>
        <div class="sidebar large-page-element">            
            <div class="header">
                <img src="{{user.assetPath}}/{{user.username}}.jpg" alt="{{user.name}}" />
                <h2>{{user.name}}</h2>
            </div>
            <p>
                {{user.about}}
            </p>
            <p>
                <span class="light-text">Yesterday in <a href="/{{forum.stub}}">{{forum.name}}</a></span>                
            </p>
        </div>          
    </div>
</div>

