moment = require('../common/lib/moment')
ForaDbModel = require('./foramodel').ForaDbModel
models = require('./')

class Message extends ForaDbModel
    
    @describeType: {
        type: @,
        collection: 'messages',
        fields: {
            userid: 'string',
            type: { type: 'string', $in: ['message', 'global-notification', 'user-notification'] },
            to: { useCustomValidationOnly: true, validate: -> if @type is 'user-notification' or @type is 'message' then @to.validate() },
            from: { useCustomValidationOnly: true, validate: -> if @type is 'message' then @from.validate() },
            data: 'object',
            createdAt: { autoGenerated: true, event: 'created' },
            updatedAt: { autoGenerated: true, event: 'updated' }
        }
    }
        
        
    
    format: (_format) =>
        try
            switch _format
                when 'timeline'
                    switch @reason
                        when 'new-collection'
                            user = @data.collection.createdBy
                            {                        
                                subject: {
                                    thumbnail: user.thumbnail,
                                    name: user.name,
                                    link: "/~#{user.username}"
                                },
                                verb: "added a new collection",
                                object: {
                                    thumbnail: @data.collection.icon,
                                    name: @data.collection.name,
                                    link: "/#{@data.collection.stub}"
                                },
                                time: moment(@timestamp).from(Date.now())
                            }
                        when 'published-record'
                            user = @data.record.createdBy
                            {
                                subject: {
                                    thumbnail: user.thumbnail,
                                    name: user.name,
                                    link: "/~#{user.username}"
                                },
                                verb: "published",
                                object: {
                                    name: @data.record.title,
                                    link: "/#{@data.record.collection.stub}/#{@data.record._id}"
                                },
                                time: moment(@timestamp).from(Date.now())
                            }                   
        catch error
            return ''                
            
            
    
exports.Message = Message
